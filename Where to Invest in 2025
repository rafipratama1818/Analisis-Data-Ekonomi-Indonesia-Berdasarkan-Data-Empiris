        // Years for chart
        const years = ['2020', '2021', '2022', '2023', '2024', '2025'];

        // Initialize page
        function init() {
            renderAssetCards();
            renderComparisonTable();
            renderChart('all');
            renderRSIChart();
        }

        // Render asset cards with metric styling
        function renderAssetCards() {
            const grid = document.getElementById('assetGrid');
            grid.innerHTML = '';

            Object.keys(investmentData).forEach(key => {
                const asset = investmentData[key];
                const isPositive = !asset.performance.includes('-');
                const ytdPositive = !asset.ytd.includes('-');
                
                const card = document.createElement('div');
                card.className = 'asset-card';
                card.onclick = () => showModal(key);
                
                card.innerHTML = `
                    <div class="metric-label">${asset.icon} ${asset.name}</div>
                    <div class="metric-value">${asset.performance}</div>
                    <div class="metric-change ${isPositive ? 'positive' : 'negative'}">
                        ${asset.annualReturn} Annual Return
                    </div>
                    <div class="ytd-label">
                        YTD: <span style="color: ${ytdPositive ? '#48bb78' : '#f56565'}; font-weight: 600;">${asset.ytd}</span>
                    </div>
                    <div style="margin-top: 12px;">
                        <span class="risk-badge risk-${asset.risk}">
                            ${asset.risk === 'low' ? 'LOW RISK' : asset.risk === 'medium' ? 'MEDIUM RISK' : 'HIGH RISK'}
                        </span>
                    </div>
                `;
                
                grid.appendChild(card);
            });
        }

        // Render comparison table
        function renderComparisonTable() {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';

            Object.keys(investmentData).forEach(key => {
                const asset = investmentData[key];
                const ytdPositive = !asset.ytd.includes('-');
                const row = document.createElement('tr');
                
                row.innerHTML = `
                    <td><strong>${asset.icon} ${asset.name}</strong></td>
                    <td><strong style="color: ${asset.performance.includes('-') ? '#f56565' : '#48bb78'}">${asset.performance}</strong></td>
                    <td><strong style="color: ${ytdPositive ? '#48bb78' : '#f56565'}">${asset.ytd}</strong></td>
                    <td>${asset.annualReturn}</td>
                    <td><span class="risk-badge risk-${asset.risk}">
                        ${asset.risk === 'low' ? 'LOW' : asset.risk === 'medium' ? 'MEDIUM' : 'HIGH'}
                    </span></td>
                    <td>${asset.minInvestment}</td>
                    <td>${asset.liquidity}</td>
                    <td>${asset.tax}</td>
                    <td style="font-size: 0.85em;">${asset.platforms}</td>
                    <td><button class="filter-btn" onclick="showModal('${key}')" style="padding: 6px 12px; font-size: 0.85em;">View</button></td>
                `;
                
                tbody.appendChild(row);
            });
        }

        // Professional chart colors matching the theme
        const assetColors = {
            gold: '#F59E0B',
            silver: '#9CA3AF',
            reksadana: '#10B981',
            stocks: '#3B82F6',
            bitcoin: '#F97316',
            ethereum: '#8B5CF6',
            bnb: '#EAB308',
            bonds: '#6366F1',
            sukuk: '#14B8A6',
            deposito: '#78716C'
        };

        // Track mouse position for tooltip
        let currentFilter = 'all';

        // Render professional chart with interactivity
        function renderChart(filter) {
            currentFilter = filter;
            const canvas = document.getElementById('trendChart');
            const ctx = canvas.getContext('2d');
            const tooltip = document.getElementById('chartTooltip');
            
            // Set canvas size with proper DPI
            const dpr = window.devicePixelRatio || 1;
            const rect = canvas.parentElement.getBoundingClientRect();
            canvas.width = (rect.width - 50) * dpr;
            canvas.height = 400 * dpr;
            canvas.style.width = (rect.width - 50) + 'px';
            canvas.style.height = '400px';
            ctx.scale(dpr, dpr);
            
            const width = rect.width - 50;
            const height = 400;
            
            // Clear canvas
            ctx.clearRect(0, 0, width, height);
            
            // Filter data based on selection
            let assetsToShow = Object.keys(investmentData);
            if (filter === 'safe') {
                assetsToShow = ['gold', 'bonds', 'sukuk', 'deposito'];
            } else if (filter === 'growth') {
                assetsToShow = ['reksadana', 'stocks', 'gold', 'silver'];
            } else if (filter === 'crypto') {
                assetsToShow = ['bitcoin', 'ethereum', 'bnb'];
            }
            
            // Calculate chart dimensions
            const padding = { top: 20, right: 40, bottom: 40, left: 60 };
            const chartWidth = width - padding.left - padding.right;
            const chartHeight = height - padding.top - padding.bottom;
            
            // Find max value for scaling (normalize to 100 at start)
            let maxValue = 0;
            const normalizedData = {};
            assetsToShow.forEach(key => {
                const asset = investmentData[key];
                normalizedData[key] = asset.data.map((val, i) => (val / asset.data[0]) * 100);
                maxValue = Math.max(maxValue, ...normalizedData[key]);
            });
            
            // Round up max value to nearest 100
            maxValue = Math.ceil(maxValue / 100) * 100;
            
            // Draw grid lines (horizontal)
            ctx.strokeStyle = '#2d3748';
            ctx.lineWidth = 1;
            const gridLines = 8;
            for (let i = 0; i <= gridLines; i++) {
                const y = padding.top + (chartHeight / gridLines) * i;
                ctx.beginPath();
                ctx.moveTo(padding.left, y);
                ctx.lineTo(width - padding.right, y);
                ctx.stroke();
                
                // Y-axis labels
                const value = Math.round(maxValue - (maxValue / gridLines) * i);
                ctx.fillStyle = '#718096';
                ctx.font = '11px -apple-system, BlinkMacSystemFont, sans-serif';
                ctx.textAlign = 'right';
                ctx.fillText(value + '%', padding.left - 10, y + 4);
            }
            
            // Draw grid lines (vertical)
            years.forEach((year, i) => {
                const x = padding.left + (chartWidth / (years.length - 1)) * i;
                ctx.beginPath();
                ctx.moveTo(x, padding.top);
                ctx.lineTo(x, height - padding.bottom);
                ctx.stroke();
                
                // X-axis labels
                ctx.fillStyle = '#718096';
                ctx.font = '11px -apple-system, BlinkMacSystemFont, sans-serif';
                ctx.textAlign = 'center';
                ctx.fillText(year, x, height - padding.bottom + 20);
            });
            
            // Store point positions for hover detection
            const pointPositions = [];
            
            // Draw lines for each asset
            assetsToShow.forEach(key => {
                const asset = investmentData[key];
                const normalized = normalizedData[key];
                
                ctx.strokeStyle = assetColors[key];
                ctx.lineWidth = 2.5;
                ctx.shadowColor = assetColors[key];
                ctx.shadowBlur = 3;
                
                ctx.beginPath();
                
                normalized.forEach((value, i) => {
                    const x = padding.left + (chartWidth / (years.length - 1)) * i;
                    const y = height - padding.bottom - (value / maxValue) * chartHeight;
                    
                    if (i === 0) {
                        ctx.moveTo(x, y);
                    } else {
                        ctx.lineTo(x, y);
                    }
                    
                    // Store point position
                    pointPositions.push({
                        x, y, 
                        assetKey: key,
                        assetName: asset.name,
                        year: years[i],
                        value: value.toFixed(2),
                        originalValue: asset.data[i],
                        icon: asset.icon
                    });
                });
                
                ctx.stroke();
                
                // Reset shadow
                ctx.shadowColor = 'transparent';
                ctx.shadowBlur = 0;
                
                // Draw points
                normalized.forEach((value, i) => {
                    const x = padding.left + (chartWidth / (years.length - 1)) * i;
                    const y = height - padding.bottom - (value / maxValue) * chartHeight;
                    
                    ctx.fillStyle = '#1a202c';
                    ctx.beginPath();
                    ctx.arc(x, y, 4, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.strokeStyle = assetColors[key];
                    ctx.lineWidth = 2;
                    ctx.beginPath();
                    ctx.arc(x, y, 4, 0, Math.PI * 2);
                    ctx.stroke();
                });
            });
            
            // Add mouse move event for tooltip
            canvas.onmousemove = function(e) {
                const rect = canvas.getBoundingClientRect();
                const mouseX = e.clientX - rect.left;
                const mouseY = e.clientY - rect.top;
                
                // Find nearest point
                let nearestPoint = null;
                let minDist = 15; // Maximum distance to trigger tooltip
                
                pointPositions.forEach(point => {
                    const dist = Math.sqrt(Math.pow(mouseX - point.x, 2) + Math.pow(mouseY - point.y, 2));
                    if (dist < minDist) {
                        minDist = dist;
                        nearestPoint = point;
                    }
                });
                
                if (nearestPoint) {
                    // Show tooltip
                    const asset = investmentData[nearestPoint.assetKey];
                    document.getElementById('tooltipTitle').textContent = `${nearestPoint.icon} ${nearestPoint.assetName}`;
                    document.getElementById('tooltipContent').innerHTML = `
                        <div style="margin-bottom: 5px;"><strong>Year:</strong> ${nearestPoint.year}</div>
                        <div style="margin-bottom: 5px;"><strong>Growth:</strong> <span class="tooltip-value">${nearestPoint.value}%</span></div>
                        <div><strong>Value:</strong> ${formatCurrency(nearestPoint.originalValue, nearestPoint.assetKey)}</div>
                    `;
                    
                    tooltip.style.left = (e.clientX + 15) + 'px';
                    tooltip.style.top = (e.clientY - 15) + 'px';
                    tooltip.classList.add('show');
                    canvas.style.cursor = 'pointer';
                } else {
                    tooltip.classList.remove('show');
                    canvas.style.cursor = 'default';
                }
            };
            
            canvas.onmouseleave = function() {
                tooltip.classList.remove('show');
            };
            
            // Update legend
            updateLegend(assetsToShow);
        }

        // Format currency based on asset type
        function formatCurrency(value, assetKey) {
            if (['bitcoin', 'ethereum', 'bnb'].includes(assetKey)) {
                return 'Rp ' + value.toLocaleString('id-ID', {maximumFractionDigits: 0});
            } else if (['gold', 'silver'].includes(assetKey)) {
                return 'Rp ' + value.toLocaleString('id-ID', {maximumFractionDigits: 0}) + '/gram';
            } else if (['stocks'].includes(assetKey)) {
                return value.toLocaleString('id-ID', {maximumFractionDigits: 2});
            } else {
                return value.toLocaleString('id-ID', {maximumFractionDigits: 2}) + '%';
            }
        }

        // Render RSI Chart
        function renderRSIChart() {
            const canvas = document.getElementById('rsiChart');
            const ctx = canvas.getContext('2d');
            const tooltip = document.getElementById('rsiTooltip');
            
            // Set canvas size with proper DPI
            const dpr = window.devicePixelRatio || 1;
            const rect = canvas.parentElement.getBoundingClientRect();
            canvas.width = (rect.width - 50) * dpr;
            canvas.height = 300 * dpr;
            canvas.style.width = (rect.width - 50) + 'px';
            canvas.style.height = '300px';
            ctx.scale(dpr, dpr);
            
            const width = rect.width - 50;
            const height = 300;
            
            // Clear canvas
            ctx.clearRect(0, 0, width, height);
            
            // Calculate chart dimensions
            const padding = { top: 20, right: 40, bottom: 40, left: 60 };
            const chartWidth = width - padding.left - padding.right;
            const chartHeight = height - padding.top - padding.bottom;
            
            // Draw background zones
            // Overbought zone (70-100)
            const overboughtY = padding.top;
            const overboughtHeight = (chartHeight * 30) / 100;
            ctx.fillStyle = 'rgba(245, 101, 101, 0.1)';
            ctx.fillRect(padding.left, overboughtY, chartWidth, overboughtHeight);
            
            // Oversold zone (0-30)
            const oversoldY = height - padding.bottom - (chartHeight * 30) / 100;
            const oversoldHeight = (chartHeight * 30) / 100;
            ctx.fillStyle = 'rgba(72, 187, 120, 0.1)';
            ctx.fillRect(padding.left, oversoldY, chartWidth, oversoldHeight);
            
            // Draw horizontal grid lines
            ctx.strokeStyle = '#2d3748';
            ctx.lineWidth = 1;
            for (let i = 0; i <= 10; i++) {
                const y = padding.top + (chartHeight / 10) * i;
                ctx.beginPath();
                ctx.moveTo(padding.left, y);
                ctx.lineTo(width - padding.right, y);
                ctx.stroke();
                
                // Y-axis labels
                const value = 100 - (i * 10);
                ctx.fillStyle = '#718096';
                ctx.font = '11px -apple-system, BlinkMacSystemFont, sans-serif';
                ctx.textAlign = 'right';
                ctx.fillText(value, padding.left - 10, y + 4);
            }
            
            // Draw reference lines at 30 and 70
            ctx.strokeStyle = '#ed8936';
            ctx.lineWidth = 1.5;
            ctx.setLineDash([5, 5]);
            
            // 70 line
            const line70Y = padding.top + (chartHeight * 30) / 100;
            ctx.beginPath();
            ctx.moveTo(padding.left, line70Y);
            ctx.lineTo(width - padding.right, line70Y);
            ctx.stroke();
            
            // 30 line
            const line30Y = padding.top + (chartHeight * 70) / 100;
            ctx.beginPath();
            ctx.moveTo(padding.left, line30Y);
            ctx.lineTo(width - padding.right, line30Y);
            ctx.stroke();
            
            ctx.setLineDash([]);
            
            // Draw vertical grid lines
            years.forEach((year, i) => {
                const x = padding.left + (chartWidth / (years.length - 1)) * i;
                ctx.strokeStyle = '#2d3748';
                ctx.lineWidth = 1;
                ctx.beginPath();
                ctx.moveTo(x, padding.top);
                ctx.lineTo(x, height - padding.bottom);
                ctx.stroke();
                
                // X-axis labels
                ctx.fillStyle = '#718096';
                ctx.font = '11px -apple-system, BlinkMacSystemFont, sans-serif';
                ctx.textAlign = 'center';
                ctx.fillText(year, x, height - padding.bottom + 20);
            });
            
            // Store point positions
            const rsiPointPositions = [];
            
            // Draw RSI lines for each asset
            Object.keys(investmentData).forEach(key => {
                const asset = investmentData[key];
                const rsiValues = asset.rsi;
                
                ctx.strokeStyle = assetColors[key];
                ctx.lineWidth = 2;
                ctx.shadowColor = assetColors[key];
                ctx.shadowBlur = 2;
                
                ctx.beginPath();
                
                rsiValues.forEach((rsi, i) => {
                    const x = padding.left + (chartWidth / (years.length - 1)) * i;
                    const y = height - padding.bottom - (rsi / 100) * chartHeight;
                    
                    if (i === 0) {
                        ctx.moveTo(x, y);
                    } else {
                        ctx.lineTo(x, y);
                    }
                    
                    // Store point position
                    rsiPointPositions.push({
                        x, y,
                        assetKey: key,
                        assetName: asset.name,
                        year: years[i],
                        rsi: rsi,
                        icon: asset.icon
                    });
                });
                
                ctx.stroke();
                ctx.shadowColor = 'transparent';
                ctx.shadowBlur = 0;
                
                // Draw points
                rsiValues.forEach((rsi, i) => {
                    const x = padding.left + (chartWidth / (years.length - 1)) * i;
                    const y = height - padding.bottom - (rsi / 100) * chartHeight;
                    
                    ctx.fillStyle = '#1a202c';
                    ctx.beginPath();
                    ctx.arc(x, y, 3, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.strokeStyle = assetColors[key];
                    ctx.lineWidth = 1.5;
                    ctx.beginPath();
                    ctx.arc(x, y, 3, 0, Math.PI * 2);
                    ctx.stroke();
                });
            });
            
            // Add mouse move event for RSI tooltip
            canvas.onmousemove = function(e) {
                const rect = canvas.getBoundingClientRect();
                const mouseX = e.clientX - rect.left;
                const mouseY = e.clientY - rect.top;
                
                let nearestPoint = null;
                let minDist = 15;
                
                rsiPointPositions.forEach(point => {
                    const dist = Math.sqrt(Math.pow(mouseX - point.x, 2) + Math.pow(mouseY - point.y, 2));
                    if (dist < minDist) {
                        minDist = dist;
                        nearestPoint = point;
                    }
                });
                
                if (nearestPoint) {
                    let condition = 'Neutral';
                    let conditionColor = '#ed8936';
                    if (nearestPoint.rsi > 70) {
                        condition = 'Overbought';
                        conditionColor = '#f56565';
                    } else if (nearestPoint.rsi < 30) {
                        condition = 'Oversold';
                        conditionColor = '#48bb78';
                    }
                    
                    document.getElementById('rsiTooltipTitle').textContent = `${nearestPoint.icon} ${nearestPoint.assetName}`;
                    document.getElementById('rsiTooltipContent').innerHTML = `
                        <div style="margin-bottom: 5px;"><strong>Year:</strong> ${nearestPoint.year}</div>
                        <div style="margin-bottom: 5px;"><strong>RSI:</strong> <span class="tooltip-value">${nearestPoint.rsi}</span></div>
                        <div><strong>Status:</strong> <span style="color: ${conditionColor}; font-weight: 600;">${condition}</span></div>
                    `;
                    
                    tooltip.style.left = (e.clientX + 15) + 'px';
                    tooltip.style.top = (e.clientY - 15) + 'px';
                    tooltip.classList.add('show');
                    canvas.style.cursor = 'pointer';
                } else {
                    tooltip.classList.remove('show');
                    canvas.style.cursor = 'default';
                }
            };
            
            canvas.onmouseleave = function() {
                tooltip.classList.remove('show');
            };
            
            // Update RSI legend
            updateRSILegend();
        }

        // Update legend
        function updateLegend(assetsToShow) {
            const legend = document.getElementById('chartLegend');
            legend.innerHTML = '';
            
            assetsToShow.forEach(key => {
                const asset = investmentData[key];
                const item = document.createElement('div');
                item.className = 'legend-item';
                item.innerHTML = `
                    <div class="legend-color" style="background: ${assetColors[key]}"></div>
                    <span>${asset.name}</span>
                `;
                legend.appendChild(item);
            });
        }

        // Update RSI legend
        function updateRSILegend() {
            const legend = document.getElementById('rsiLegend');
            legend.innerHTML = '';
            
            Object.keys(investmentData).forEach(key => {
                const asset = investmentData[key];
                const item = document.createElement('div');
                item.className = 'legend-item';
                item.innerHTML = `
                    <div class="legend-color" style="background: ${assetColors[key]}"></div>
                    <span>${asset.name}</span>
                `;
                legend.appendChild(item);
            });
        }

        // Filter chart
        function filterChart(filter) {
            document.querySelectorAll('.filters .filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            renderChart(filter);
        }

        // Show modal with detailed info
