                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin: 20px 0;">
                    <div class="metric-card">
                        <div class="metric-label">5-Year Return</div>
                        <div class="metric-value" style="color: ${asset.performance.includes('-') ? '#f56565' : '#48bb78'}">${asset.performance}</div>
                    </div>
                    <div class="metric-card">
                        <div class="metric-label">YTD Return</div>
                        <div class="metric-value" style="color: ${asset.ytd.includes('-') ? '#f56565' : '#48bb78'}; font-size: 1.5em;">${asset.ytd}</div>
                    </div>
                    <div class="metric-card">
                        <div class="metric-label">Annual Return</div>
                        <div class="metric-value" style="font-size: 1.5em;">${asset.annualReturn}</div>
                    </div>
                    <div class="metric-card">
                        <div class="metric-label">Risk Level</div>
                        <div style="margin-top: 10px;">
                            <span class="risk-badge risk-${asset.risk}" style="font-size: 1em; padding: 8px 16px;">
                                ${asset.risk === 'low' ? 'LOW RISK' : asset.risk === 'medium' ? 'MEDIUM RISK' : 'HIGH RISK'}
                            </span>
                        </div>
                    </div>
                </div>
                
                <div style="background: #1a202c; padding: 20px; border-radius: 8px; margin: 20px 0; border: 1px solid #2d3748;">
                    <p style="margin-bottom: 10px;"><strong style="color: #a0aec0;">üí∞ Minimum Investment:</strong> ${asset.minInvestment}</p>
                    <p style="margin-bottom: 10px;"><strong style="color: #a0aec0;">üíß Liquidity:</strong> ${asset.liquidity}</p>
                    <p style="margin-bottom: 10px;"><strong style="color: #a0aec0;">üìã Tax:</strong> ${asset.tax}</p>
                    <p><strong style="color: #a0aec0;">üì± Platform:</strong> ${asset.platforms}</p>
                </div>
                
                <div class="pros-cons">
                    <div class="pros">
                        <h4>‚úÖ Strengths</h4>
                        <ul>
                            ${asset.pros.map(pro => `<li>${pro}</li>`).join('')}
                        </ul>
                    </div>
                    <div class="cons">
                        <h4>‚ö†Ô∏è Weaknesses</h4>
                        <ul>
                            ${asset.cons.map(con => `<li>${con}</li>`).join('')}
                        </ul>
                    </div>
                </div>
            `;
            
            modal.style.display = 'block';
        }

        // Close modal
        function closeModal() {
            document.getElementById('assetModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('assetModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Investment calculator
        function calculateInvestment() {
            const investment = parseFloat(document.getElementById('investment').value);
            const assetType = document.getElementById('assetType').value;
            const period = parseInt(document.getElementById('period').value);
            
            if (!investment || investment <= 0) {
                alert('Please enter a valid investment amount');
                return;
            }
            
            const asset = investmentData[assetType];
            const annualReturn = parseFloat(asset.annualReturn) / 100;
            
            const futureValue = investment * Math.pow(1 + annualReturn, period);
            const totalReturn = futureValue - investment;
            const returnPercentage = ((futureValue / investment - 1) * 100).toFixed(2);
            
            let netReturn = totalReturn;
            let taxAmount = 0;
            
            if (asset.tax !== 'BEBAS PAJAK 0%') {
                const taxRate = parseFloat(asset.tax) / 100;
                if (!isNaN(taxRate)) {
                    taxAmount = totalReturn * taxRate;
                    netReturn = totalReturn - taxAmount;
                }
            }
            
            const resultDiv = document.getElementById('calcResult');
            resultDiv.innerHTML = `
                <div class="result">
                    <h4>Projection Results</h4>
                    <p><strong>Asset:</strong> ${asset.icon} ${asset.name}</p>
                    <p><strong>Initial Investment:</strong> Rp ${investment.toLocaleString('id-ID')}</p>
                    <p><strong>Period:</strong> ${period} years</p>
                    <p><strong>Assumed Return:</strong> ${asset.annualReturn} annually</p>
                    <hr style="margin: 15px 0; border: none; border-top: 1px solid #4a5568;">
                    <p style="font-size: 1.2em;"><strong>Final Value:</strong> <span style="color: #48bb78;">Rp ${futureValue.toLocaleString('id-ID', {maximumFractionDigits: 0})}</span></p>
                    <p><strong>Total Profit:</strong> <span style="color: #48bb78;">Rp ${totalReturn.toLocaleString('id-ID', {maximumFractionDigits: 0})} (+${returnPercentage}%)</span></p>
                    ${taxAmount > 0 ? `
                        <p><strong>Estimated Tax:</strong> <span style="color: #f56565;">Rp ${taxAmount.toLocaleString('id-ID', {maximumFractionDigits: 0})}</span></p>
                        <p><strong>Net Profit:</strong> <span style="color: #48bb78;">Rp ${netReturn.toLocaleString('id-ID', {maximumFractionDigits: 0})}</span></p>
                    ` : `
                        <p style="color: #48bb78; font-weight: bold;">‚ú® Tax Free! All profits are yours</p>
                    `}
                    <hr style="margin: 15px 0; border: none; border-top: 1px solid #4a5568;">
                    <p style="font-size: 0.85em; color: #a0aec0;">‚ö†Ô∏è Disclaimer: This projection is based on historical performance. Past performance does not guarantee future results. Always conduct your own research before investing.</p>
                </div>
            `;
        }

        // Initialize on load
        window.onload = init;

        // Redraw chart on window resize with debounce
        let resizeTimeout;
        window.onresize = function() {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                renderChart(currentFilter);
                renderRSIChart();
            }, 250);
        };
    </script>
</body>
